* {
  all: unset; //Unsets everything so you can style everything from scratch
}

//Global Styles
.bar {
  background-color: #3a3a3a;
  color: #b0b4bc;
  border-radius: 10px;

  & > * > *:first-child {
    margin-left: 15px;
  }

  & > * > *:last-child {
    margin-left: 15px;
  }
}

// Styles on classes (see eww.yuck for more information)

.sidestuff slider {
  all: unset;
  color: #ffd5cd;
}

.metric scale trough {
  all: unset;
  background-color: #4e4e4e;
  border-radius: 50px;
  min-height: 3px;
  min-width: 50px;
  margin-left: 10px;
  margin-right: 20px;

  & highlight {
    all: unset;
    background-color: #D35D6E;
    color: #000000;
    border-radius: 10px;
  }
}


.workspaces {
  color: #D35D6E;

  & > .workspace {
    border-radius: 999px;

    &.current {
      background-color: #D35D6E;
    }

    &.used {
      background-color: #b0b4bc;
    }

    &.unused {
      border: 1px solid #b0b4bc;
    }
  }
}